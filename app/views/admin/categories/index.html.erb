<div>
  <div class="pull-right">
    <%= link_to "Create Category", new_admin_category_path, class: "btn btn-primary" %>
  </div>

  <h1>
    <% if @category %>
      Category:<%= @category.title %>(<%= @categories.total_count %>)
    <% else %>
      Categories (<%= @categories.total_count %>)
    <% end -%>
  </h1>
</div>

<div>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Weight</th>
      <th></th>
    </tr>

    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td><%= category.weight %></td>
        <td align="right">
          <%= link_to "Edit", edit_admin_category_path(category) %> 
          <%= link_to "Delete", admin_category_path(category), method: :delete, 'data-confirm': "Are you sure?" %>
          <% if category.root? %>
            <%= link_to "Sub-categories", admin_categories_path(id: category) %>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  </table>
</div>

<div class="pagination">
  <%= paginate @categories %>
</div>