<ul class="list-group">
  <% @categories.each do |group| %>
    <li class="list-group-item"><%= group.first.title %></li>
    <% group.last.each do |sub_category| %>
      <li class="list-group-item">
        <%= link_to sub_category.title, category_path(sub_category) %>
      </li>
    <% end %>
  <% end %>
</ul>
