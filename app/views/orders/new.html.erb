<h1>Confirm order</h1>
<div class="row">
  <div class="container">
    <div class="page-header">
      <h4>Delivery address:</h4>
      <%= link_to "Manage Addresses", addresses_path, class: "btn btn-info btn-xs manage-addresses-btn" %>
    </div>
    <div id="address_list">
      <%= render partial: 'addresses/address_list', locals: { addresses: @addresses, current_user: current_user } %>
    </div>

    <div class="page-header">
      <h4>Items:</h4>
    </div>
    <% @shopping_carts.each do |shopping_cart| %>
      <div class="media shopping-cart-row">
        <div class="media-left">
          <%= image_tag shopping_cart.product.main_product_image.image.url(:small), class: 'media-object', alt: shopping_cart.product.title %>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= shopping_cart.product.title %></h4>
          Quantity: <%= shopping_cart.amount %> Price: $<%= shopping_cart.amount * shopping_cart.product.price %>
        </div>
      </div>
    <% end %>

    <div class="clearfix"></div>
    <br />
    <br />
    <br />
    <br />
  </div>
</div>
